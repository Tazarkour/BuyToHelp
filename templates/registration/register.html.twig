{% extends '/security/register.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.FirstName,{'attr': {'class': 'form-control required'}})}}
        <label for="inputUserName">First Name</label>
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.LastName,{'attr': {'class': 'form-control required'}})}}
        <label for="inputUserName">Last Name</label>
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.username,{'attr': {'class': 'form-control required'}})}}
        <label for="inputUserName">Username</label>
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control required'}})}}
        <label for="inputUserName">Email</label>
    </div>
    <div class="form-floating mb-3">
        {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control required'}})}}
        <label for="inputUserName">Password</label>
    </div>
        {{ form_row(registrationForm.agreeTerms,{'attr': {'class': 'form-check-label'}}) }}
<div class="mt-4 mb-0">
    <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Create Account</button></div>
</div>
    {{ form_end(registrationForm) }}
{% endblock %}
